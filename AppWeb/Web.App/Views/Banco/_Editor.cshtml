@model Web.App.Models.Banco.BancoEditorModelo

<h4>Banco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Grabar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (Model.banco != null && Model.banco.IdBanco > 0)
                {
                    <input type="hidden" asp-for="banco.IdBanco" />
                }
            }

            <div class="form-group">
                <label asp-for="banco.Nombre" class="control-label"></label>
                <input asp-for="banco.Nombre" class="form-control" maxlength="50" placeholder="Nombre" required />
                <span asp-validation-for="banco.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="banco.Direccion" class="control-label"></label>
                <input asp-for="banco.Direccion" class="form-control" maxlength="200" placeholder="Dirección" required />
                <span asp-validation-for="banco.Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-info" />
                <input type="button" value="Cancelar" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Banco")'" />
            </div>
        </form>
    </div>
</div>