@model Web.App.Models.Sucursal.SucursalEditorModelo

<h4>Sucursal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Eliminar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="sucursal.IdSucursal" />
            <div class="form-group">
                <label asp-for="sucursal.NombreBanco" class="control-label"></label>
                @Html.DisplayFor(model => model.sucursal.NombreBanco)
            </div>
            <div class="form-group">
                <label asp-for="sucursal.Nombre" class="control-label"></label>
                @Html.DisplayFor(model => model.sucursal.Nombre)
            </div>
            <div class="form-group">
                <label asp-for="sucursal.Direccion" class="control-label"></label>
                @Html.DisplayFor(model => model.sucursal.Direccion)
            </div>

            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-info" />
                <input type="button" value="Cancelar" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Sucursal")'" />
            </div>
        </form>
    </div>
</div>