@model Web.App.Models.Sucursal.SucursalIndexModelo

<h4>Lista de Sucursales</h4>
<hr />
<div style="float:right">
    <input type="button" value="Nuevo" class="btn btn-info" onclick="location.href='@Url.Action("Nuevo", "Sucursal")'" />
</div>
<br />
<div>
    <table style="width:100%; border: 1px solid black;">
        <thead style="height: 50px;border-bottom: 1px solid #ddd;">
            <tr>
                <td>Banco</td>
                <td>Nombre</td>
                <td>Dirección</td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.sucursales)
            {
                <tr>
                    <td>@item.NombreBanco</td>
                    <td>@item.Nombre</td>
                    <td>@item.Direccion</td>
                    <td>

                        <a asp-action="Editar" asp-route-id="@item.IdSucursal"
                           class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Editar
                        </a>

                        <a asp-action="Ver" asp-route-id="@item.IdSucursal"
                           class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>  Eliminar
                        </a>

                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>