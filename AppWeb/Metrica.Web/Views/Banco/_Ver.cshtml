@model Metrica.Web.Models.Banco.BancoEditorModelo

<h4>Banco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Eliminar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="banco.IdBanco" />
            <div class="form-group">
                <label asp-for="banco.Nombre" class="control-label"></label>
                @Html.DisplayFor(model => model.banco.Nombre)
            </div>
            <div class="form-group">
                <label asp-for="banco.Direccion" class="control-label"></label>
                @Html.DisplayFor(model => model.banco.Direccion)
            </div>

            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-info" />
                <input type="button" value="Cancelar" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Banco")'" />
            </div>
        </form>
    </div>
</div>